<nav class="navbar navbar-default">
	<div class="container-fluid">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<%= link_to "P2 Privacy Rules Manager", root_path, class: "navbar-brand" %>
			<p class="navbar-text">
				<span class="label <%= prs_dev_label_class %>" data-toggle="tooltip" data-placement="bottom" title="Connected to PRS environment: <%= Rails.application.secrets.prs_url %>">
					<%= Rails.application.secrets.prs_environment %>
				</span>
			</p>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav">
				<%- for section in %w[districts authorized_entities data_sets] -%>
					<%= content_tag :li, class: ("active" if controller.class.to_s.underscore.include?(section)) do %>
						<%= link_to section.titleize, instance_eval("#{section}_path") %>
					<% end %>
				<% end %>
			</ul>
		</div><!-- /.navbar-collapse -->
	</div><!-- /.container-fluid -->
</nav>
