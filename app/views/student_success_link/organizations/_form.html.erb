<div class="alert alert-warning" role="alert">
	<%= glyph("exclamation-sign") %>
	<strong>Remember:</strong> Changes here will be made in Student Success Link immediately. Edit with caution!
</div>

<%= simple_form_for @organization, wrapper: :horizontal_form do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :description, as: :text %>
		<%= f.input :website, as: :url %>
		<%= f.input :url, label: "Student Success Link Domain" %>
		<%= f.input :authorizedEntityId, label: "Authorized Entity", collection: AuthorizedEntity.all %>
		<%= f.input :externalServiceId, label: "External Service", as: :grouped_select, collection: AuthorizedEntity.all_full, group_method: :services, value_method: :id, prompt: "-- Please select --" %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
<% end %>
