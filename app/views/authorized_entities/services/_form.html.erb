<%= simple_form_for [@authorized_entity, @service], wrapper: :horizontal_form do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :externalServiceName, label: "Name" %>
		<%= f.input :externalServiceDescription, label: "Description" %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
<% end %>
