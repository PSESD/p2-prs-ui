<h1>Listing District Services</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authorized_entity_services.each do |authorized_entity_service| %>
        <tr>
          <td><%= link_to 'Show', authorized_entity_service_path(authorized_entity_id: @authorized_entity.id, id: authorized_entity_service.id) %></td>
          <td><%= link_to 'Edit', edit_authorized_entity_service_path(authorized_entity_id: @authorized_entity.id, id: authorized_entity_service.id) %></td>
          <td><%= link_to 'Destroy', authorized_entity_service_path(authorized_entity_id: @authorized_entity.id, id: authorized_entity_service.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

